<fieldset class="mt-8 lg:mt-1">
    <legend id="who" class="text-2xl ml-0 lg:ml-8 text-primary mt-6 mb-6">Who Are You?</legend>
    <div class="flex flex-col lg:flex-row ml-0 lg:ml-8">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <div class="flex flex-col  w-full lg:w-1/2 mb-8 lg:mr-20">
        <label class="text-sm  text-gray-600  {% for error in errors %}{% if error === 'Your first name is required' %} text-red-700 font-bold {% endif %}{% endfor %}  " for="firstName">First Name <span class=" text-xs">*</span></label>
        <input 
            name="firstName" 
            class="input {% for error in errors %}{% if error === 'Your first name is required' %} inputError focus:outline-none{% endif %}{% endfor %}" 
            id="firstName" 
            type="text" 
            value='{{user_firstName}}'>
            {% for error in errors%}
                {% if error === "Your first name is required" %}
                <span class="mt-1 mb-1 text-red-700 text-xs font-bold">{{error}}</span>
                {% endif %}
            {% endfor %}
        </div>
        <div class="flex flex-col w-full lg:w-1/2 mb-8 lg:mr-20">
        <label class="text-sm  text-gray-600 {% for error in errors %}{% if error === 'Your last name is required' %}  text-red-700 font-bold {% endif %}{% endfor %}  " for="lastName">Last Name <span class=" text-xs">*</span></label>
        <input 
            name="lastName" 
            class="input {% for error in errors %}{% if error === 'Your last name is required' %} inputError focus:outline-none{% endif %}{% endfor %}" 
            id="lastName" 
            type="text" 
            value='{{user_lastName}}'/>

            {% for error in errors%}
                {% if error === "Your last name is required" %}
                <span class="mt-1 mb-1  text-red-700 text-xs font-bold">{{error}}</span>
                {% endif %}
            {% endfor %}
        </div>
    </div>
    <div class="flex flex-col lg:flex-row ml-0 lg:ml-8">
        <div class="flex flex-col w-full lg:w-1/2 mb-8 lg:mr-20">
        <label class="text-sm  text-gray-600 {% for error in errors %}{% if error === 'email is not valid' %} text-red-700 font-bold {% endif %}{% endfor %}" for="email">Email <span class=" text-xs">*</span> </label>
        <input 
            name="email" 
            class="input {% for error in errors %}{% if error === 'email is not valid' %} inputError focus:outline-none{% endif %}{% endfor %}" 
            id="email" 
            type="text" 
            value='{{user_email}}'/>
            {% for error in errors%}
                {% if error === "email is not valid" %}
                <span class="mt-1 mb-1 text-red-700  text-xs font-bold">{{error}}</span>
                {% endif %}
            {% endfor %}
        </div>
        <div class="flex flex-col w-full lg:w-1/2 mb-8 lg:mr-20">
            <label class="text-sm  text-gray-600 {% for error in errors %}{% if error === 'A phone is required' %} text-red-700 font-bold {% endif %}{% endfor %}" for="phone">Phone <span class=" text-xs">*</span></label>
            <input 
                name="phone"  
                class="input {% for error in errors %}{% if error === 'A phone is required' %} inputError focus:outline-none{% endif %}{% endfor %}" 
                id="phone" 
                type="text" 
                value='{{user_phone}}'/>
            {% for error in errors%}
                {% if error === "A phone is required" %}
                <span class="mt-1 mb-1 text-red-700 text-xs font-bold">{{error}}</span>
                {% endif %}
            {% endfor %} 
        </div>
    </div>
</fieldset>
