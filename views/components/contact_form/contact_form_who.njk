<fieldset class="mt-8 lg:mt-1">
    <legend id="who" class="text-2xl ml-0 lg:ml-8 text-primary mt-6 mb-6">Who Are You?</legend>
    <div class="flex flex-col lg:flex-row ml-0 lg:ml-8">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <div class="flex flex-col  w-full lg:w-1/2 mb-8 lg:mr-20">
            {% include "./field_firstName.njk" %}
        </div>
        <div class="flex flex-col w-full lg:w-1/2 mb-8 lg:mr-20">
            {% include "./field_lastName.njk" %}
        </div>
    </div>
    <div class="flex flex-col lg:flex-row ml-0 lg:ml-8">
        <div class="flex flex-col w-full lg:w-1/2 mb-8 lg:mr-20">
            {% include "./field_email.njk" %}
        </div>
        <div class="flex flex-col w-full lg:w-1/2 mb-8 lg:mr-20">
            {% include "./field_phone.njk" %}
        </div>
    </div>
</fieldset>
