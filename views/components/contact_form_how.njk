<fieldset class="lg:mt-8">
    <legend class="text-2xl ml-0 lg:ml-8 text-primary mb-6">How Can We Help You?</legend>
    <div class="block  ml-0 lg:ml-8 mb-12">
        <span class="text-gray-600 mb-4">I want to...</span>
        <div id="goalRadioGroup" class="mt-2 flex">
        <div>
            <label class="inline-flex items-center mr-6">
            {% if hire %}
            <input type="radio" class="form-radio h-6 w-6 text-primary" name="i_want_to" value="hire" checked>
            {% else %}
            <input type="radio" class="form-radio h-6 w-6 text-primary" name="i_want_to" value="hire">
            {% endif %}
            <span class="ml-2">Hire You For a Job</span>
            </label>
        </div>
        <div>
            <label class="inline-flex items-center">
            {% if join %}
            <input type="radio" class="form-radio h-6 w-6 text-primary" name="i_want_to" value="join" checked>
            {% else %}
            <input type="radio" class="form-radio h-6 w-6 text-primary" name="i_want_to" value="join">
            {% endif %}
            <span class="ml-2">Work With You On a Future Project</span>
            </label>
        </div>
        </div>
    </div>
    <label class="block mt-8 ml-0 lg:ml-8">
        <span class="text-sm mb-2 text-gray-600">I'm Interested In</span>
        <select class="form-select block border-t-0 border-l-0 shadow-none border-r-0 border-b-1 border rounded-none border-gray-600 mt-1 w-full lg:w-1/3 ">
        <option>Option 1</option>
        <option>Option 2</option>
        </select>
    </label>
</fieldset>