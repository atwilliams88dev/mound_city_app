<!-- label is a string  -->
<!-- link is a string -->

{% macro fancyMenuItem(label, link, class)%}
<a id="{{label}}_anchor" href="{{link}}" class="{{class}}">{{label}}</a>
<svg height="10px" width="70px">
  <line
    class="line1"
    height="8px"
    stroke-linecap="round"
    style="stroke-width: 2px"
    x1="-10"
    x2="-10"
    y1="3"
    y2="3"
  >
    <animate
      attributeName="x2"
      from="50%"
      to="100%"
      dur="0.30s"
      fill="freeze"
      begin="{{label}}.mouseenter"
      end="{{label}}.mouseleave"
    />
    <animate
      attributeName="x1"
      from="50%"
      to="0"
      dur="0.30s"
      fill="freeze"
      begin="{{label}}.mouseenter"
      end="{{label}}.mouseleave"
    />
  </line>
</svg>
{% endmacro %}
